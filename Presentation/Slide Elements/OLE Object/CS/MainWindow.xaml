<syncfusion:ChromelessWindow x:Class="OLEObject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
        Title="OLE Object"
    WindowStartupLocation="CenterScreen"
	Width="367.511" Height="350"
	Icon="App.ico"
	syncfusion:SkinStorage.VisualStyle="Metro"
        >
    <Grid x:Name="LayoutRoot">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Uniform" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,20,5" Margin="0,43,15,196" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view a PowerPoint Presentation generated by
            Essential Presentation.  Please note that MS PowerPoint viewer or PowerPoint is
            required to view the resultant Presentation.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="btnCreatePresn_Click" HorizontalAlignment="Right" Margin="0,0,20,15" Width="auto" Height="25">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Create Presentation" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Height="23" Width="110"/>
                <Image x:Name="imgbut" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="15,5,5,5" Margin="0,181,20,45" TextAlignment="Justify">

            <TextBlock.Text>
                Click the button to view a embedded OLE document opened by 
				Essential Presentation. Please note that Microsoft Word is required to 
				view the embedded Docx document.
            </TextBlock.Text>
        </TextBlock>
        <Button Click="btnOpenEmbeddedFile_Click" HorizontalAlignment="Right" Margin="10,0,5,15" VerticalAlignment="Bottom" Width="auto" Height="25">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Open Embedded File" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center" Width="120"/>
                <Image x:Name="imgbut1" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
