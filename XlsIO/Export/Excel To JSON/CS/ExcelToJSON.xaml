<syncfusion:ChromelessWindow x:Class="EssentialXlsIOSamples.ExcelToJSON"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"                             
    Title="Excel To JSON" Width="452" Height="300" Icon="App.ico"
        syncfusion:SkinStorage.VisualStyle="Metro"                             
        WindowStyle="SingleBorderWindow"
    WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Image VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>
        <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="1,77,0,1" >
            <TextBlock.Text>
                Click the “Input Template” button to view the input Excel document. Please note that the Microsoft Excel viewer or Microsoft Excel is required to view the Excel document. 
            </TextBlock.Text>
        </TextBlock>
        <TextBlock TextAlignment="Justify" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="1,125,0,1" >
            <TextBlock.Text>
                Click the “Convert to JSON” button to view the converted JSON file.
            </TextBlock.Text>
        </TextBlock>
        <GroupBox Header="Excel To JSON" Margin="4,150,3.667,3.667" Name="groupBox3">
            <Grid Height="80">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Height="28" x:Name="label4" VerticalAlignment="Center" Content="Convert" Grid.Column="1" Grid.ColumnSpan="2" Margin="22,6,118,6"/>
                    <ComboBox Height="24" Name="combo1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="121" Grid.Column="2" Margin="22,8,0,8" Grid.ColumnSpan="2" />
                    <CheckBox Content="As Schema" Height="16" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="3" Name="check1" Margin="22,12,0,12"/>
                </Grid>
                <Button Height="25" Name="button1" VerticalAlignment="Center" Click="InputTemplte" HorizontalAlignment="Center" Width="130" Grid.Row="1" Margin="78,2,218.667,13">Input Template</Button>
                <Button Height="25" Name="button2" VerticalAlignment="Center" Click="ConvertToJson" HorizontalAlignment="Center" Width="127" Grid.Row="1" Margin="224,2,75.667,13">Convert to JSON</Button>
            </Grid>
        </GroupBox>
    </Grid>

</syncfusion:ChromelessWindow>
