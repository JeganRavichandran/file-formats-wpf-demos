<syncfusion:ChromelessWindow  x:Class="EssentialXlsIOSamples.CreateMacro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Create Macro"
    Icon="App.ico"
    syncfusion:SkinStorage.VisualStyle="Metro"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="363" Height="300">
    <Grid Margin="0,0,0,-19">
        <Grid.RowDefinitions>
            <RowDefinition Height="82"></RowDefinition>
            <RowDefinition Height="52"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="82" Name="image1" Stretch="None"/>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Width="357" RenderTransformOrigin="0,0.5">

            <TextBlock.Text>
                Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please note that MS Excel Viewer or MS Excel is required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>

        <GroupBox Grid.Row="2" Header="Save As" Padding="5,5,5,5" Margin="26,10,43,40" Grid.RowSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <RadioButton GroupName="Group1" x:Name="rdbXLS" VerticalContentAlignment="Center" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="14,0,0,5">XLS</RadioButton>
                <RadioButton GroupName="Group1" x:Name="rdbXLTM" VerticalContentAlignment="Center" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="14,0,0,5">XLTM</RadioButton>
                <RadioButton GroupName="Group1" x:Name="rdbXLSM" VerticalContentAlignment="Center" Grid.Row="2" IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="14,0,0,6">XLSM</RadioButton>
            </Grid>
        </GroupBox>
        <Button Grid.Row="3" Grid.Column="1" Click="btnCreate_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,32,43" BorderBrush="LightBlue" Content="Create Document" Height="26" Width="110" RenderTransformOrigin="1,0.5" Grid.RowSpan="2"/>
    </Grid>
</syncfusion:ChromelessWindow>
