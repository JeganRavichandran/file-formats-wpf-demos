<syncfusion:ChromelessWindow  x:Class="Hello_World.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	syncfusion:SkinStorage.VisualStyle="Metro"
    Title="PDF Conformance"
    WindowStyle="SingleBorderWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
	Width="365" Height="225"
     >
    <Grid x:Name="LayoutRoot">
        <Image Name="image1" VerticalAlignment="Top" Stretch="Fill" Height="82" />

        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,77,0,1" TextAlignment="Justify">
            <TextBlock.Text>
            Click the button to view an PDF document generated by
            Essential PDF.  Please note that Adobe Reader or its equivalent is
            required to view the resultant document.
            </TextBlock.Text>
        </TextBlock>
        <TextBlock FontFamily="Verdana" FontSize="11" TextWrapping="Wrap" Padding="5,5,5,5" Margin="0,0,5,17" TextAlignment="Justify"  HorizontalAlignment="left" FontWeight="SemiBold" VerticalAlignment="Bottom">
            <TextBlock.Text>
             Select the conformance
            </TextBlock.Text>
        </TextBlock>
       <ComboBox Margin="160,0,5,17" Name="comboBox" SelectedIndex="1" Width="105" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <ComboBoxItem>PDF/A-1a</ComboBoxItem>
                <ComboBoxItem>PDF/A-1b</ComboBoxItem>
                <ComboBoxItem>PDF/A-2a</ComboBoxItem>
				<ComboBoxItem>PDF/A-2b</ComboBoxItem>
				<ComboBoxItem>PDF/A-2u</ComboBoxItem>
				<ComboBoxItem>PDF/A-3a</ComboBoxItem>
				<ComboBoxItem>PDF/A-3b</ComboBoxItem>
				<ComboBoxItem>PDF/A-3u</ComboBoxItem>
				<ComboBoxItem>PDF/X-1a 2001</ComboBoxItem>
       </ComboBox>
        <Button Click="Button_Click" HorizontalAlignment="Right" Margin="0,0,5,17" VerticalAlignment="Bottom" Width="60" Height="25" BorderBrush="LightBlue">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PDF" Margin="2 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</syncfusion:ChromelessWindow>
